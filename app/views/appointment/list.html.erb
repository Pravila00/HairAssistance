<% if user_signed_in? %>
<div class="content-body">
  <div class="row col mb-3 text-center">
    <% if @appointments.blank? %>
      <p>No hay actualmente ninguna cita</p>
    <% else %>
      <strong><h1>Lista de citas</h1></strong>
      <hr>
      <ul id = "appointments">
        <% @appointments.each do |c| %>
          <div class="row col -3">
            <li>
              <div class="p-3">
                <span>
                  <h4><%= link_to c.persona, {:action => 'show', :id => c.id} -%></h4>
                  <%= c.fecha %> <%= c.hora %>
                </span>


              </div>
              <div>
                <span class="p-3">
                  <%= link_to 'Editar', {:action => "edit", :id => c.id}, class: "btn btn-secondary" %>
                </span>
                <span class="p-3">
                  <%= link_to "Eliminar", {:action => 'delete', :id => c.id}, :data => {:confirm => 'Â¿Estas seguro de eliminar la cita?'},
                              class: "btn btn-danger" %>
                </span>
              </div>
            </li>
          </div>
          <hr>
        <% end %>
      </ul>

    <% end %>
  </div>

</div>

<% end %>